{
  "manifest_version": 2,

  "name": "SQRL",
  "description": "A SQRL client.",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "http://*/*",
    "storage"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon128-white.png",
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html"
  }
}