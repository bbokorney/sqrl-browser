{
  "manifest_version": 2,

  "name": "SQRL",
  "description": "A SQRL client.",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "http://*/*",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html"
  }
}